{
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ES2022",
        "moduleResolution": "Node",
        "incremental": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
        "paths": {
            "#unane/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/*.ts"]
}
